<!DOCTYPE html>
<html>
<head>

<link rel="stylesheet" href="/stylesheets/css/bootstrap.min.css" type="text/css">
<link rel="stylesheet" href="/stylesheets/css/dataTables.bootstrap.min.css" type="text/css">

<script src="/javascripts/js/jquery-3.3.1.js"></script>
<script src="/javascripts/js/jquery.dataTables.min.js"></script>
<script src="/javascripts/js/dataTables.bootstrap.min.js"></script>
</head>
<body>
<script>

$(document).ready(function() {
    $('#example').DataTable({
      "aLengthMenu":[[5,10,15,25,50,75,-1],[5,10,15,25,50,75,"ALL"]],
      "iDisplayLength":7
    
    });
} );

</script>
<table id="example" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                    <th>SERIAL NO.</th>
                    <th>COURSE ID</th>
                    <th>COURSE NAME</th>
                    <th>ADDED ON</th>
                    <th>ADDED BY</th>
                    <th>LAST UPDATE</th>
                    <th>UPDATE</th>
            </tr>
        </thead>
        <tbody>
            
                <% 
          data.map(function(item,key){
            
           
           var p=new Date(item.addedon)
           cn=p.getFullYear()+"/"+(p.getMonth()+1)+"/"+p.getDate();
           var t=new Date(item.lastupdate)
           cd=t.getFullYear()+"/"+(t.getMonth()+1)+"/"+t.getDate();
           
            
           %>
 
           <tr><td><%=(key+1) %></td><td><%=item.courseid%></td><td><%=item.coursename%></td><td><%=cn%></td><td><%=item.addedby%></td><td><%=cd%></td><td><a href='http://localhost:3000/course/coursedisplaybyid?cid=<%=item.courseid%>'>Edit/Delete</a></td></tr>
        <% });
        %>
  
  
            
  </tbody>    
  <tfoot>
      <tr>
          <th>SERIAL NO.</th>
          <th>COURSE ID</th>
          <th>COURSE NAME</th>
          <th>ADDED ON</th>
          <th>ADDED BY</th>
          <th>LAST UPDATE</th>
          <th>UPDATE</th>
      </tr>
  </tfoot>
  
</body>
</html>
