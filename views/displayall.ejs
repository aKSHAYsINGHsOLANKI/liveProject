<!DOCTYPE html>
<html>
<head>

<link rel="stylesheet" href="/stylesheets/css/bootstrap.min.css" type="text/css">
<link rel="stylesheet" href="/stylesheets/css/dataTables.bootstrap.min.css" type="text/css">

<script src="/javascripts/js/jquery-3.3.1.js"></script>
<script src="/javascripts/js/jquery.dataTables.min.js"></script>
<script src="/javascripts/js/dataTables.bootstrap.min.js"></script>
</head>
<body>
  
<script>

$(document).ready(function() {
    $('#example').DataTable({
      "aLengthMenu":[[5,10,15,25,50,75,-1],[5,10,15,25,50,75,"ALL"]],
      "iDisplayLength":7
    
    });
} );

</script>
<table id="example" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>SERIAL NO.</th>
                <th>LOGIN ID</th>
                <th>USER NAME</th>
                <th>PASSWORD</th>
                <th>USER TYPE</th>
                <th>CURRENT DATE</th>
                <th>ADD BY</th>
                <th>UPDATE ON</th>
                <th>PICTURE</th>
                <th>UPDATE</th>
            </tr>
        </thead>
        <tbody>
            
                <% 
          data.map(function(item,key){
            
           
           var d=new Date(item.currentdate)
           bd=d.getFullYear()+"/"+(d.getMonth()+1)+"/"+d.getDate();
           var g=new Date(item.updateon)
           bo=g.getFullYear()+"/"+(g.getMonth()+1)+"/"+g.getDate();
           
            
           %>
 
           <tr><td><%=(key+1) %></td><td><%=item.loginid%></td><td><%=item.username%></td><td><%=item.password%></td><td><%=item.usertype%></td><td><%=bd%></td><td><%=item.addby%></td><td><%=bo%></td><td><img src='http://localhost:3000/images/<%=item.picture%>' width='35' height="35"></td><td><a href='http://localhost:3000/new/newuserdisplaybyid?lid=<%=item.loginid%>'>Edit/Delete</a></td></tr>
        <% });
        %>
  
  
            
  </tbody>    
  <tfoot>
      <tr>
          <th>SERIAL NO.</th>
          <th>LOGIN ID</th>
          <th>USER NAME</th>
          <th>PASSWORD</th>
          <th>USER TYPE</th>
          <th>CURRENT DATE</th>
          <th>ADD BY</th>
          <th>UPDATE ON</th>
          <th>PICTURE</th>
          <th>UPDATE</th>
      </tr>
  </tfoot>
  
</body>
</html>
