<!DOCTYPE html>
<html>
<head>

<link rel="stylesheet" href="/stylesheets/css/bootstrap.min.css" type="text/css">
<link rel="stylesheet" href="/stylesheets/css/dataTables.bootstrap.min.css" type="text/css">

<script src="/javascripts/js/jquery-3.3.1.js"></script>
<script src="/javascripts/js/jquery.dataTables.min.js"></script>
<script src="/javascripts/js/dataTables.bootstrap.min.js"></script>
</head>
<body>
<script>

$(document).ready(function() {
    $('#example').DataTable();
} );

</script>
<table id="example" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>SERIAL NO.</th>
          <th>BATCH ID</th>
          <th>COURSE NAME</th>
          <th>FROMTIME</th>
          <th>TOTIME</th>
          <th>BATCH DATE</th>
          
          <th>BATCH NAME</th>
          <th>BATCH DAYS</th>
          <th>ADDED ON</th>
          <th>ADDED BY</th>
          <th>LAST UPDATE</th>
            </tr>
        </thead>
        <tbody>
            
                <% 
          data.map(function(item,key){
            
           
           var d=new Date(item.currentdate)
           bd=d.getFullYear()+"/"+(d.getMonth()+1)+"/"+d.getDate();
           var g=new Date(item.updateon)
           bo=g.getFullYear()+"/"+(g.getMonth()+1)+"/"+g.getDate();
           
            
           %>
 
           <tr><td><%=(key+1) %></td><td><%=item.batchid%></td><td><%=item.coursename%></td><td><%=item.fromtime%></td><td><%=item.totime%></td><td><%=item.batchdate%></td><td><%=item.batchname%></td><td><%=item.batchdays%></td><td><%=item.addedon%></td><td><%=item.addedby%></td><td><%=item.lastupdate%></td><td><a href='http://localhost:3000/batch/batchesdisplayallbyid?bid=<%=item.batchid%>'>Edit/Delete</a></td></tr>
        <% });
        %>
  
  
            
  </tbody>    
  <tfoot>
      <tr>
          <th>SERIAL NO.</th>
          <th>BATCH ID</th>
          <th>COURSE NAME</th>
          <th>FROMTIME</th>
          <th>TOTIME</th>
          <th>BATCH DATE</th>
          
          <th>BATCH NAME</th>
          <th>BATCH DAYS</th>
          <th>ADDED ON</th>
          <th>ADDED BY</th>
          <th>LAST UPDATE</th>
      </tr>
  </tfoot>
  
</body>
</html>
